{
	"compilerOptions": {
		"module": "esnext",
		"target": "es2017",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
		"lib": [
			"dom",
			"es2017"
		],
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"src/*"
			]
		},
		"moduleResolution": "node",
		"removeComments": false
  },
  "files": [
    "./references.d.ts",
    "./src/main.ts"
  ],
	"exclude": [
		"node_modules",
		"platforms"
	]
}